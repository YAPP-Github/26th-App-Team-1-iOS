# App identifier
app_identifier(ENV["APP_IDENTIFIER"])

# Apple ID (개발자 계정 이메일)
apple_id(ENV["APPLE_ID"])

# Team ID (Developer Program에서 확인 가능)
team_id(ENV["DEVELOPMENT_TEAM"])

# iTunes Connect Team ID (App Store Connect 팀 ID, 보통 team_id와 동일)
itc_team_id(ENV["DEVELOPMENT_TEAM"])

# 개발자 이름 (인증서에 사용되는 이름)
developer_name = ENV["DEVELOPER_NAME"]

